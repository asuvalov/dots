#!/bin/sh

# Prints information about internet connection:
# Ethernet: 🌐 (up) or ❎(down)
# Wifi: 📶 and strength (up) or 📡 (down)
# Tunnel: 🔒 (up) or 🔓 (down)

get_wifi_level() {
  level=$(awk '/^\s*w/ {
    if ($4 >= -50)
      print "100%";
    else if ($4 <= -100)
      print "0%";
    else
      print int(2 * ($4 + 100))
    }' /proc/net/wireless)
  printf %d\\n "$level"
}

tunnel() {
  case "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" in
    up) printf "🔒" ;;
    *) printf "🔓" ;;
  esac
}

wifi() {
  case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
    down) printf 📡 ;;
      up) printf "📶 %3d%%" "$(get_wifi_level)" ;;
  esac
}

ethernet() {
  case "$(cat /sys/class/net/e*/operstate 2>/dev/null)" in
    down) printf "❎" ;;
      up) printf "🌐"  ;;
  esac
}

printf "%s %s %s\n" "$(ethernet)" "$(wifi)" "$(tunnel)"

